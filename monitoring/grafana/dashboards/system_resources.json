{
  "id": null,
  "uid": "system-resources",
  "title": "System Resources",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-30m", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "graph",
      "title": "CPU Utilization (requires node_exporter)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 2,
      "type": "graph",
      "title": "Memory Usage (requires node_exporter)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "graph",
      "title": "Network Throughput (requires node_exporter)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_network_receive_bytes_total[5m])) by (instance)",
          "legendFormat": "{{instance}} rx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(node_network_transmit_bytes_total[5m])) by (instance)",
          "legendFormat": "{{instance}} tx"
        }
      ]
    }
  ]
}
